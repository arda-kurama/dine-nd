{
    "cli": {
        "version": ">= 6.3.1",
        "appVersionSource": "remote"
    },
    "build": {
        "development": {
            "developmentClient": true,
            "distribution": "internal",
            "android": {
                "buildType": "apk"
            },
            "ios": {
                "simulator": true
            }
        },
        "preview": {
            "distribution": "internal",
            "android": {
                "buildType": "apk"
            },
            "ios": {
                "simulator": true
            }
        },
        "production": {
            "autoIncrement": true,
            "android": {
                "buildType": "app-bundle"
            },
            "ios": {
                "distribution": "store"
            }
        }
    },
    "submit": {
        "production": {
            "android": {
                "track": "internal"
            },
            "ios": {}
        }
    }
}
